# Force windows into specific modes
# #14: con "Prism Launcher 8.3" (xdg_shell, pid: 1929, app_id: "org.prismlauncher.PrismLauncher")
# nope - assign [app_id="org.prismlauncher.*"] layout tabbed

# Identify XWayland windows by their title bar (must be able to see the title bar - tabbed or stacking mode, for example)
for_window [shell="xwayland"] title_format "[xway] %title"

# Float Save As and Extension windows
for_window [app_id="^(firefox-developer-edition|thorium-browser)$" title="^(Open|Save|Extension).*$"] {
    floating enable
    focus
    resize set width 60 ppt height 70 ppt
    border pixel 2
}

# Float pcmanfm-qt windows
for_window [app_id="^pcmanfm-qt"] {
    floating enable
    focus
    resize set width 60 ppt height 70 ppt
    border pixel 2
}

# Float Ark windows
for_window [app_id="org.kde.ark"] {
    floating enable
    focus
    resize set width 60 ppt height 70 ppt
    border pixel 2
}

# Float Save As type windows
for_window [title="^Save.*?(As)?.*$"] {
    floating enable
    focus
    resize set width 60 ppt height 70 ppt
    border pixel 2
}


# keep x on workspace n
for_window [app_id="^firefox-developer-edition$"] move container to workspace 1
for_window [app_id="^org.gajim.Gajim$"] move container to workspace 2

exec_always ~/.config/sway/waybar.sh

include /etc/sway/config.d/*
